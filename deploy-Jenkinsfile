pipeline {
    agent {
        kubernetes {
            yamlFile 'KubernetesPod.yaml'
        }
    }
    options {
          gitlabBuilds(builds: ['deploy'])
    }
    stages{
        stage('Deploy to Cluster'){
            steps{
                updateGitlabCommitStatus name: 'deploy', state: 'pending'
                container('helm'){
                    withCredentials([file(credentialsId: 'kube-config', variable: 'CONFIG'),
                                     string(credentialsId: 'jenkins-read-registry-access', variable: 'JENKINS_REG_ACC'),
                                     usernamePassword(credentialsId: 'db-smartfridge-dev', usernameVariable: 'DB_USERNAME', passwordVariable: 'DB_PASSWORD'),
                                     string(credentialsId: 'db-smartfridge-host-dev', variable: 'DB_HOST')]) {
                        sh 'helm upgrade -i smartFridge-backend-dev infrastructure/helm/kubernetes-smartFridge-backend -n dev --create-namespace --set dbSmartFridgeUsername=$DB_USERNAME --set dbSmartFridgePassword=$DB_PASSWORD --set dbSmartFridgeHostName=$DB_HOST --set registryCredentials=$JENKINS_REG_ACC --kubekonfig=$CONFIG'
                    }
                }
                updateGitlabCommitStatus name: 'deploy', state: 'success'
            }
            post {
                 failure {
                   updateGitlabCommitStatus name: 'deploy', state: 'failed'
                 }
           }
        }
    }
}
